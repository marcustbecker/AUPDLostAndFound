extends layout
block content
    main(class="container")
        div(class="bg-light p-5 rounded")
            h1 Register

            h2 Create new Account:
            div(class="row")
                div(class="col-sm")
                    form(action='register' method='POST')
                        .form-group
                            label(class="control-label col-sm-2" for="email") E-mail
                            input(type='text' class="form-control" name='email' id='email' required='')
                        .form-group
                            label(class="control-label col-sm-2" for="password") Password
                            input(type='text' class="form-control" name='password' id='password' required='')
                        .form-group
                            label(class="control-label col-sm-2" for="first_name") First Name
                            input(type='text' class="form-control" name='first_name' id='first_name' required='')
                        .form-group
                            label(class="control-label col-sm-2" for="last_name") Last Name
                            input(type='text' class="form-control" name='last_name' id='last_name' required='')
                        .form-group
                            label(class="control-label col-sm-2" for="phone_number") Phone Number
                            input(type='text' class="form-control" name='phone_number' id='phone_number' required='')
                        input(type='submit' class='btn btn-outline-success')